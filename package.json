{
  "version": "0.15.0",
  "name": "ambire-common",
  "description": "Common ground for the Ambire apps",
  "scripts": {
    "generate:contractInfo": "node scripts/generateContractInfo.js > src/constants/humanizerInfo.json",
    "compile:contracts": "ts-node scripts/compileContracts.js",
    "test": "npx hardhat compile; npx hardhat test; jest",
    "jest": "jest --forceExit",
    "build": "tsc src/libs/portfolio/getOnchainBalances.ts -t es2020 -m commonjs --esModuleInterop true --sourceMap true --resolveJsonModule true && tsc src/libs/deployless/deployless.ts -t es2020 -m commonjs --esModuleInterop true --sourceMap true",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "lint:fix": "eslint ./src/** --ext .js,.jsx,.ts,.tsx --fix"
  },
